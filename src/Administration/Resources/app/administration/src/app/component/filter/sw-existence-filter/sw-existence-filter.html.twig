{% block sw_existence_filter %}
    <div class="sw-existence-filter">
        <sw-base-filter :title="filter.label"
                        :showResetButton="!!value"
                        @resetFilter="resetFilter">
            {% block sw_existence_filter_content %}
                <sw-select-field :value="value"
                                 :size="'small'"
                                 :placeholder="filter.placeholder"
                                 @change="changeValue">
                    <option :value="true">{{ $t('sw-existence-filter.hasCriteria', { criteriaName: filter.label.toLowerCase() }) }}</option>
                    <option :value="false">{{ $t('sw-existence-filter.noCriteria', { criteriaName: filter.label.toLowerCase() }) }}</option>
                </sw-select-field>
            {% endblock %}
        </sw-base-filter>
    </div>
{% endblock %}
